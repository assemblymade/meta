{
  "name": "meta",
  "version": "0.0.1",
  "description": "Assembly Meta",
  "scripts": {
    "jest": "node_modules/.bin/jest",
    "test": "npm run jest",
    "lint": "node_modules/.bin/jsxhint app/assets/javascripts/components/**.js.jsx app/assets/javascripts/components/**/*.js.jsx",
    "postinstall": "npm run bundle",
    "bundle": "node_modules/.bin/browserify -x app/assets/javascripts/dispatcher.js -x app/assets/javascripts/constants.js -r underscore -t [ reactify ] app/assets/javascripts/components/**.js.jsx app/assets/javascripts/components/**/*.js.jsx -o app/assets/javascripts/components.js",
    "watch": "node_modules/.bin/watchify -x app/assets/javascripts/dispatcher.js -x app/assets/javascripts/constants.js -r underscore -t [ reactify ] app/assets/javascripts/components/**.js.jsx app/assets/javascripts/components/**/*.js.jsx -o app/assets/javascripts/components.js -v"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/assemblymade/meta.git"
  },
  "bugs": {
    "url": "https://github.com/assemblymade/meta/issues"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/spec/javascripts/preprocessor.js",
    "setupEnvScriptFile": "<rootDir>/spec/javascripts/jest_env.js",
    "testDirectoryName": "spec/javascripts/flux",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/underscore"
    ]
  },
  "jshintConfig": {
    "asi": true
  },
  "homepage": "https://assembly.com",
  "dependencies": {
    "Set": "^0.4.1",
    "browserify": "^5.9.1",
    "color": "^0.7.3",
    "d3": "^3.5.3",
    "elasticsearch": "^3.1.1",
    "imagesloaded": "^3.1.8",
    "immutable": "^3.3.0",
    "jquery": "^2.1.1",
    "keymirror": "^0.1.0",
    "marked": "^0.3.2",
    "masonry": "braznaavtrav/masonry",
    "moment": "^2.8.1",
    "nprogress": "^0.1.6",
    "page": "^1.5.0",
    "qs": "^2.3.3",
    "react": "^0.12.0",
    "react-datepicker-component": "^1.0.2",
    "react-router": "^0.11.6",
    "react-spinner": "^0.1.9",
    "react-tools": "^0.12.0",
    "reactify": "^0.17.1",
    "underscore": "^1.6.0"
  },
  "devDependencies": {
    "jest-cli": "^0.1.18",
    "watchify": "^1.0.1"
  },
  "engines": {
    "node": "^0.10.26"
  },
  "browserify": {
    "transform": [
      [
        "reactify",
        {
          "es6": true
        }
      ]
    ]
  }
}
