<% @product = Product.find_by_slug('kjdb') %>

<%= render 'shared/navbar' %>

<div class="container">

  <div class="bg-yellow py3 px2 mb2 border border-darken-1 white rounded">
    <a class="button button--default bg-white inline-block right" href="#">Submit for review</a>
    <p>This product is pending review. It's only visible to people with a direct link.</p>
  </div>

  <div class="bg-blue py3 px2 mb2 border border-darken-1 white rounded">
    <div class="pull-right">
      Submitted 5 days ago
    </div>
    <p class="mb0">This product was submitted to be reviewed by Assembly.</p>
  </div>

  <h1><%= @product.name %></h1>

  <ul class="nav nav-pills">
    <li class="active">
      <a href="#">
        <span class="icon icon-compass icon-left"></span>
        Idea
      </a>
    </li>
    <li><a href="#">Updates</a></li>
    <li><a href="#">People</a></li>
    <!-- <li><a href="#">Bounties</a></li> -->
    <!-- <li><a href="#">Financals</a></li> -->
  </ul>

  <br>

  <div class="row">
    <div class="col-md-8">
      <p class="lead text-large" style="font-size:24px">
        <%= @product.lead %>.
      </p>
    </div>
  </div>



  <!-- Video -->
  <div class="row">
    <div class="col-md-6">

      <div class="embed-responsive embed-responsive-16by9" style="margin-bottom:24px">
        <iframe class="embed-responsive-item" width="640" height="480" src="https://www.youtube-nocookie.com/embed/OLyq0xlAa-Y?rel=0" frameborder="0" allowfullscreen></iframe>
      </div>

    </div>
  </div>

  <!-- Description -->
  <div class="row">
    <div class="col-md-8">
      <div class="markdown-normalized text-large">
        <%= product_markdown(@product, @product.description) %>
      </div>
    </div>
    <div class="col-md-3 col-md-offset-1">
      <h6 class="gray-2 mt0">Elsewhere</h6>
      <ul class="list-reset">
        <li><a href="#">Homepage</a></li>
        <li><a href="#">Twitter</a></li>
        <li><a href="#">GitHub</a></li>
        <li><a href="#">Trello</a></li>
      </ul>
    </div>
  </div>

  <!-- Bounties -->
  <h6 class="gray-2">Get involved</h6>
  <div class="row">
    <% @product.tasks.first(3).each do |bounty| %>
      <div class="col-md-4">
        <div class="border rounded mb1 bg-white">
          <div class="card-body" style="min-height:200px">
            <h6 class="gray-2 mt0 mb0">Bounty</h6>
            <h4 class="mt0"><%= bounty.title %></h4>
            <p class="mb0">
              <%= product_markdown(bounty.product, truncate(bounty.description, length: 120)) %>
            </p>
          </div>
          <div class="bg-gray-5 py2 px1">
            <span class="yellow">
              <span class="icon icon-app-coin"></span>
              <%= number_with_delimiter(bounty.value) %>
            </span>
          </div>
        </div>
      </div>
    <% end %>
    <div class="col-md-4">
      <div class="well" style="min-height:237px">
        Add a bounty here
      </div>

    </div>
  </div>


</div>


<%= render 'shared/footer' %>
