<!-- Twitter Cards -->

<meta name="twitter:card" content="summary">
<meta name="twitter:site" content="@asm">

<% if idea_show_route? && @idea %>
  <% if @idea.user.twitter_nickname %>
    <meta name="twitter:creator" content="@<%= @idea.user.twitter_nickname %>">
  <% else %>
    <meta name="twitter:creator" content="@asm">
  <% end %>
  <meta name="twitter:description" content="<%= @idea.twitter_description %>">
  <meta name="twitter:title" content="<%= @idea.twitter_title %>">
<% else %>
  <meta name="twitter:title" content='<%= yield(:title) %>'>
  <meta name="twitter:description" content="<%= yield(:description) %>">
<% end %>

<!-- Facebook Open Graph -->
<meta property="og:title" content="<%= yield(:title) %>" />
<meta property="og:description" content="<%= yield(:description) %>">

<% if product_show_route? %>
  <meta name="description" content="<%= @product.social_media_title %>" />

  <meta itemprop="name" content="<%= @product.social_media_title %>">
  <meta itemprop="description" content="<%= @product.lead %>">
  <meta itemprop="image" content="">

  <meta name="twitter:creator" content="@asm">
  <meta name="twitter:title" content="<%= @product.social_media_title %>">
  <meta name="twitter:description" content="<%= @product.lead %>">
  <meta name="twitter:image" content="<%= @product.hero_image_url %>">

  <meta property="og:site_name" content="<%= @product.name %>" />
  <meta property="og:title" content="<%= @product.pitch %>" />
  <meta property="og:url" content="<%= product_url(@product) %>" />
  <meta property="og:image" content="<%= @product.hero_image_url %>" />
  <meta property="og:description" content="<%= @product.lead %>" />
<% end %>
