<%= form_for @tax_info, as: :tax_info, url: users_tax_info_path(form_type: params[:form_type]), html: {class: 'form form-horizontal'} do |f| %>
  <h2><%= title %></h2>

  <% if message = flash[:success] %>
    <div class="alert alert-success" role="alert">
      <%= message %>
    </div>
  <% end %>

  <% if @tax_info.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <ul>
        <% @tax_info.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if params[:form_type] == 'w8ben' %>
    <%= render 'w8ben_fields', f: f %>
  <% else %>
    <%= render 'w9_fields', f: f %>
  <% end %>

  <div class="form-actions">
    <button class="btn btn-primary pull-left" type="submit">Save Info</button>
  </div>

<% end %>
