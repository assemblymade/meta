<% title 'Tax Information' %>
<%= render 'shared/navbar' %>

<div class="py3 bg-white">
  <div class="container">
    <div class="row">
      <div class="col-md-3 col-xs-3">
        <%= render 'users/card', user: @user %>
      </div>

      <div class="col-md-9 col-xs-9">
        <div class="mt0 mb4 border-bottom">
          <h2 class="mt0 mb4 border-bottom-title">Tax Information</h2>
        </div>

        <% if message = flash[:info] %>
          <div class="alert alert-warning" role="alert">
            <%= message %>
          </div>
        <% end %>


        <% if %w(w8ben w9).include? params[:form_type] %>
          <%= render 'form', title: I18n.t("tax.#{params[:form_type]}.title") %>
        <% else %>
          <div>
            <a href="<%= users_tax_info_path(form_type: 'w9')%>">I am a US Citizen</a>
          </div>
          <div>
            <a href="<%= users_tax_info_path(form_type: 'w8ben')%>">I am not a US Citizen</a>
          </div>

          <hr/>

          <h4>Why is Assembly requesting my taxpayer information?</h4>

          <p>As a US company, weâ€™re required by law to collect taxpayer information from Assemblers who earn an income in the US.</p>

          <p>For US Assemblers, we will send you a 1099-K form to help you complete your personal taxes.</p>

          <p>For foreign workers we're required to withhold tax on your behalf, but we will provide you with the necessary documentation to claim the tax back from the US government.</p>

          <p>We encourage you to consult a tax professional if you need advice on reporting your income.</p>

          <a href="#" data-helpful="assembly">Contact us for more info</a>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/footer' %>
