<div class="stat-group" style="margin-bottom: 36px;">
  <div class="stat">
    <div class="stat-value">
      <% if @show_karma %>
      <%= "<a href=".html_safe %>
      "<%= user_karma_path(@user)%>"
      <%= ">".html_safe %>
      <%= number_with_delimiter(@user.karma_total) %>
      <%= "</a>".html_safe %>
      <% else %>
      <%= number_with_delimiter(@user.count_contributions) %>
      <% end %>
    </div>
    <div class="stat-title">
      <% if @show_karma %>
      <%= "Karma" %>
      <% else %>
      <%= "Contributions" %>
      <% end %>
    </div>
  </div>

  <div class="stat">
    <div class="stat-value">
      <%= number_with_delimiter @user.sum_app_cents %>
    </div>
    <div class="stat-title">
      App Coins
    </div>
  </div>

</div>
